include ./layouts/header
+header('${companyName} references are waiting for you')
body
  table(role="presentation", background="https://deeto-images.s3.amazonaws.com/static/backgrounds/bg-yellow-red.png", width="100%", height="100%").container
    tr
      td.container-body
        table.header
          tr
            td
              p.logo
                img(src="${companyLogo}", alt="Company logo")
        center.card
          table
            tr
              td
                p.text
                  | Hi ${prospectName},<br /><br />
                  | We received your request to reschedule your meeting with ${referenceName}.
                  | We will notify you as soon as ${referenceName} responds.
            tr.divider
          table
            tr.list-item
              td
                div.action-card
                  a(href="${redirectUrl}", target="_blank").button-outlined
                    | See your references
        table.footer
          tr.footer-body
            td
              div.copyright
                | Â© 2022. Powered by
                img(src="https://deeto-images.s3.amazonaws.com/static/logo-deeto.png", alt="Deeto copyright logo")