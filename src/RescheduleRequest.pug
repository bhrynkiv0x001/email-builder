include ./layouts/header
+header('Heads up - ${prospectName} from ${prospectCompany} requested to reschedule a call')
body
  table(role="presentation", background="https://deeto-images.s3.amazonaws.com/static/backgrounds/bg-blue-pink.png", width="100%", height="100%").container
    tr
      td.container-body
        table.header
          tr
            td
              img(src="${companyLogo}", alt="Company logo").header-logo
        center.newProspect-card
          table.card-body
            tr
              td
                p.text
                  | Hey ${salesRepName}, <br /> <br />
                  | Please be aware that Ricardo asked to reschedule his call with Jill that was schduled for ${date}. <br />
                  | ${prospectName} sent new time slots to ${referenceName} and we will notify you as soon as ${referenceName} responds.
            tr.divider
          table
            tr.list-item
              td
                div.user-card
                  table
                    td
                      div.user-avatar
                        img(src="${prospectName}", alt="Person")
                    td
                      div.description
                        strong
                          | ${prospectName}
                        p
                          | ${prospectPosition}
            tr.divider
          table
            tr
              td.center
                a.button-outlined
                  | See ${prospectName} profile
        table.footer
          tr.footer-body
            td
              div.copyright
                | Â© 2022. Powered by
                img(src="https://deeto-images.s3.amazonaws.com/static/logo-deeto.png", alt="Deeto copyright logo")