include ./layouts/header
+header('Meeting reminder - Your call with ${referenceName} starts in 30 minutes')
body
  table(role="presentation", background="https://deeto-images.s3.amazonaws.com/static/backgrounds/bg-yellow-red.png", width="100%", height="100%").container
    tr
      td.container-body
        table.header
          tr
            td
              img(src="https://deeto-images.s3.amazonaws.com/static/logo-deeto.png", alt="Deeto copyright logo").header-logo
        center.newProspect-card
          table.card-body
            tr
              td
                p.text
                  | Hey ${prospectName}, <br /> <br />
                  | Your meeting with ${referenceName} starts in 30 minutes. <br />
                  | You can join the meeting by clicking below.
            tr.divider
          table
            tr.list-item
              td
                div.user-card
                  table
                    td
                      div.user-avatar
                        img(src="${referenceAvatar}", alt="Person")
                    td
                      div.description
                        strong
                          | ${referenceName}
                        p
                          | ${referencePosition}
            tr.divider
          table
            tr
              td.center
                a.button-outlined
                  | Join meeting
        table.footer
          tr.footer-body
            td
              div.copyright
                | Â© 2022. Powered by
                img(src="https://deeto-images.s3.amazonaws.com/static/logo-deeto.png", alt="Deeto copyright logo")